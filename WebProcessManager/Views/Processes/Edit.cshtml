@model WebProcessManager.Models.Process

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Process</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="AutoRestart" /> @Html.DisplayNameFor(model => model.AutoRestart)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Application" class="control-label"></label>
                <input asp-for="Application" class="form-control" />
                <span asp-validation-for="Application" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Arguments" class="control-label"></label>
                <input asp-for="Arguments" class="form-control" />
                <span asp-validation-for="Arguments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContainerId" class="control-label"></label>
                <select asp-for="ContainerId" class="form-control" asp-items="ViewBag.ContainerId"></select>
                <span asp-validation-for="ContainerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

